extends layout

include _includes/sharedHTMLfunctions

block content
  .row.banner
    .col-12
      h1 #{pageHeader.title} | #{pageHeader.strapline}
  .row
    .col-12.col-lg-9
      .row
        .col-12.col-md-6
          p.rating
            +outputRating(player.rating)
          p= player.name
        .col-12.col-md-6.location-map
          .card.card-primary
            .card-block
              h2.card-title Player Pics
              img.img-fluid.rounded(src=`http://maps.googleapis.com/maps/api/staticmap?center=-26.2309,28.0583&zoom=17&size=400x350&sensor=false&markers=-26.2309,28.0583&scale=2`)
      .row
        .col-12
          .card.card-primary.review-card
            .card-block
              a.btn.btn-primary.float-right(href=`/tags/${player._id}/annotation/new`) Add Review
              h2.card-title Reviews
              each review in player.reviews
                .row.review
                  .col-12.no-gutters.review-header
                    span.rating.push
                      +outputRating(player.rating)
                    span.reviewAuthor.push #{review.coach}
                    small.reviewTimestamp
                      +formatDate(review.createdOn)
                  .col-12
                    p !{(review.comment).replace(/\n/g, '<br/>')}
    .col-12.col-lg-3
      p.lead #{player.name} #{sidebar.context}
      p= sidebar.callToAction
extends layout

include _includes/sharedHTMLfunctions


block content
  .row.banner
    .col-12
      h1= player.name
        small &nbsp; | #{pageHeader.strapline}
  .row
    .col-12.col-lg-9
      .row
        .col-12.col-md-6
          p.rating
            +outputRating(player.rating)
          p= player.address
          .card.card-primary
            .card-block 
              h2.card-title Training Times
              each trainingTime in player.trainingTimes
                p.card-text #{trainingTime.days} : #{trainingTime.opening} - #{trainingTime.closing}
          .card.card-primary
            .card-block 
              h2.card-title Positions
              each position in player.positions
                span.badge.badge-warning 
                  i.fa.fa-check 
                  | &nbsp; #{position}
                | &nbsp; 
        .col-12.col-md-6.location-map
          .card.card-primary
            .card-block
              img.img-fluid.rounded(src='/images/young_baller.svg', alt='My picturess')
      .row
        .col-12
          .card.card-primary.review-card
            .card-block
              a.btn.btn-primary.float-right(href=`/players/player/review/new`) Add Review
              h2.card-title Player Reviews
              each review in player.reviews
                .row-review 
                  .col-12.no-gutters.review-header
                    span.rating
                      +outputRating(review.rating)
                    span.reviewAuthor #{review.trainer}
                    small.reviewTimesamp 
                      +formatDate(review.timestamp)
                .col-12
                  p= review.reviewText
    .col-12.col-lg-3
      p.lead
        | #{player.name} #{sidebar}
      p 
        | #{lead}                                                                                        